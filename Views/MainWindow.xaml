<Window x:Class="OMSI_RouteAdvisor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:OMSI_RouteAdvisor.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="180" Width="270">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock Text="Select OMSI map folder:" Margin="0,0,0,5" HorizontalAlignment="Center"/>
            <Button x:Name="ChooseMapFolderBtn" Content="Choose map folder" Click="ChooseMapFolderBtn_Click"/>

            <TextBlock Text="Generate roadmap (if not done prior)" Margin="0,10,0,5" HorizontalAlignment="Center"/>
            <Button x:Name="ChooseMapFolderBtn2" Content="Choose map folder" Click="ChooseMapFolderBtn2_Click"/>
            
            <Label x:Name="StatusLabel" Content="In progress. Please wait..." Visibility="Collapsed" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
